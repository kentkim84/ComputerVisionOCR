<Page
    x:Class="VisualTranslator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisualTranslator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <!--Command-Bar Control-->
        <CommandBar 
            HorizontalAlignment="Right"  
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center">
            <CommandBar.Content>
                <TextBlock 
                    Text="Similar Image Search Application"                    
                    Margin="15,0,0,0"
                    Height="48"
                    Style="{ThemeResource TitleTextBlockStyle}"/>
            </CommandBar.Content>
            <!--<AppBarButton x:Name="cameraButton" Icon="Camera" Label="Camera" Tapped="CameraButton_Tapped"/>
            <AppBarButton x:Name="fileButton" Icon="OpenFile" Label="Open File" Tapped="FileButton_Tapped"/>
            <AppBarButton x:Name="processConfirmButton" Icon="Accept" Label="Accept" Tapped="processConfirmButton_Tapped" Visibility="Collapsed"/>
            <AppBarButton x:Name="processCancelButton" Icon="Cancel" Label="Calcel" Tapped="processCancelButton_Tapped" Visibility="Collapsed"/>-->
        </CommandBar>
    </Page.TopAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--Grid initialisation-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--View Control-->
        <StackPanel x:ConnectionId='1' x:Name="ViewPanel" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0">
            <!--Camera Control-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Text="Sample Image" 
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"                    
                    Grid.Row="0" Grid.ColumnSpan="4"/>
                <!--Image Preview-->
                <Grid Grid.Row="1" Grid.ColumnSpan="4" Margin="15">
                    <CaptureElement x:ConnectionId='17' x:Name="ImagePreview" Stretch="Uniform"/>
                    <Image x:ConnectionId='18' x:Name="ImageView" Stretch="Uniform" Visibility="Collapsed"/>
                </Grid>
                <!--Button Group Control-->
                <StackPanel 
                    HorizontalAlignment="Center" Orientation="Horizontal"                                     
                    Grid.Row="2" Grid.ColumnSpan="4">
                    <Button x:ConnectionId='13' 
                        x:Name="PreviewMediaButton" 
                        Style="{StaticResource TextBlockButtonStyle}"                    
                                                          >
                        <Viewbox MaxWidth="30" MaxHeight="30">
                            <SymbolIcon Symbol="Camera"/>
                        </Viewbox>
                    </Button>
                    <Button x:ConnectionId='14' 
                        x:Name="OpenFileButton" 
                        Style="{StaticResource TextBlockButtonStyle}"                    
                                                      >
                        <Viewbox MaxWidth="30" MaxHeight="30">
                            <SymbolIcon Symbol="OpenFile"/>
                        </Viewbox>
                    </Button>
                    <Button x:ConnectionId='15' 
                        x:Name="QueryImageButton" 
                        Style="{StaticResource TextBlockButtonStyle}"                    
                                                        >
                        <Viewbox MaxWidth="30" MaxHeight="30">
                            <SymbolIcon Symbol="BrowsePhotos"/>
                        </Viewbox>
                    </Button>
                    <Button x:ConnectionId='16' 
                        x:Name="CloudButton" 
                        Style="{StaticResource TextBlockButtonStyle}"                    
                                                   >
                        <Viewbox MaxWidth="30" MaxHeight="30">
                            <SymbolIcon Symbol="Sync"/>
                        </Viewbox>
                    </Button>
                </StackPanel>

            </Grid>
        </StackPanel>

        <!--Base Image Info and Search Result Info-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Text="Sample Image Info" 
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"                    
                    Grid.Row="0" Grid.ColumnSpan="4"/>
            </Grid>
        </StackPanel>

        <!--OCR Result and TextBlock at bottom-->
        <StackPanel x:ConnectionId='2'
            x:Name="OCRControlPanel"            
            Grid.Row="1" Grid.RowSpan="2" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--OCR Image View-->
                <Grid                     
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Grid.Row="0" Grid.ColumnSpan="2">
                    <Image x:ConnectionId='11' x:Name="OCRImageView" Stretch="Uniform"/>
                    <Grid x:ConnectionId='12' x:Name="OCRTextOverlay" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
                <Border x:ConnectionId='7' x:Name="StatusBorder" Margin="0,0,0,0">
                    <ScrollViewer VerticalScrollMode="Auto"  VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <TextBlock x:ConnectionId='10' 
                            x:Name="StatusBlock" FontWeight="Bold" 
                            MaxWidth="{Binding ElementName=OCRControlPanel, Path=ActualWidth}" 
                            Margin="10,10,10,20" TextWrapping="Wrap"
                            Grid.Row="1" Grid.ColumnSpan="2"/>
                    </ScrollViewer>
                </Border>
                <RelativePanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Original Text"/>
                    <ScrollViewer VerticalScrollMode="Auto"  VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <TextBlock x:ConnectionId='9' x:Name="OriginalTextBlock" FontWeight="Bold" 
                            MaxWidth="{Binding ElementName=OCRControlPanel, Path=ActualWidth}" Margin="10,10,10,20" TextWrapping="Wrap"  />
                    </ScrollViewer>
                </RelativePanel>
                <RelativePanel Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Translated Text"/>
                    <ScrollViewer VerticalScrollMode="Auto"  VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <TextBlock x:ConnectionId='8' x:Name="TranslatedTextBlock" FontWeight="Bold" 
                                MaxWidth="{Binding ElementName=OCRControlPanel, Path=ActualWidth}" Margin="10,10,10,20" TextWrapping="Wrap"  />
                    </ScrollViewer>
                </RelativePanel>
                
            </Grid>
        </StackPanel>
        
        <!--Loading page effect-->
        <StackPanel x:ConnectionId='3' 
            x:Name="ProgressControlPanel"            
            Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"            
            Visibility="Collapsed">
            <!--Progress and Message-->
            <StackPanel x:ConnectionId='4'
                x:Name="ProgressBackground"
                Opacity="0.4"
                Background="SlateGray"/>
            <StackPanel                 
                Padding="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="GhostWhite"
                Orientation="Horizontal">
                <ProgressRing x:ConnectionId='5' 
                    x:Name="ProgresRing"                    
                    IsActive="False"
                    Height="50" Width="50"/>
                <TextBlock x:ConnectionId='6'                    
                    x:Name="ProgressMessage"
                    Style="{StaticResource BodyTextBlockStyle}"
                    VerticalAlignment="Center"
                    Padding="10,0,0,0"
                    FontSize="20"
                    Text="Analysing..."/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

